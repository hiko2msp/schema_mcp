{
  "name": "schema-mcp-server",
  "version": "0.1.0",
  "description": "Schema Metadata MCP Server - A self-growing metadata store for database schemas",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "schema-mcp": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run src/**/__tests__/*.test.ts",
    "test:integration": "vitest run src/**/__tests__/*.integration.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "schema",
    "metadata",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "fuse.js": "^7.0.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  }
}
